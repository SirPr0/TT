<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transparent Draggable Text Window</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            background: transparent;
            overflow: hidden;
            font-family: Arial, sans-serif;
        }

        .window {
            position: absolute;
            top: 50px;
            left: 50px;
            width: 300px;
            height: 200px;
            background-color: rgba(40, 40, 40, 0.9);
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
            color: #ffffff;
            overflow: hidden;
            resize: both;
            opacity: 1; /* Default opacity */
            transition: opacity 0.3s ease;
        }

        .title-bar {
            width: 100%;
            height: 30px;
            background-color: rgba(30, 30, 30, 0.9);
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            cursor: move;
            display: flex;
            align-items: center;
            padding-left: 10px;
            user-select: none;
        }

        .text-area {
            width: calc(100% - 20px);
            height: calc(100% - 40px);
            margin: 10px;
            background-color: transparent;
            border: none;
            color: #ffffff;
            font-size: 14px;
            resize: none;
            outline: none;
        }

        .text-area::placeholder {
            color: #888;
        }

        .slider-container {
            position: fixed;
            top: 10px;
            right: 10px;
            width: 100px;
            opacity: 0.7;
            transition: opacity 0.3s ease;
        }

        .slider-container:hover {
            opacity: 1;
        }

        .slider {
            -webkit-appearance: none;
            width: 100%;
            height: 10px;
            background: rgba(30, 30, 30, 0.9);
            border-radius: 5px;
            outline: none;
            opacity: 0.7;
            transition: opacity 0.3s ease;
        }

        .slider:hover {
            opacity: 1;
        }

        .slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            appearance: none;
            width: 20px;
            height: 20px;
            background: #ffffff;
            border-radius: 50%;
            cursor: pointer;
        }

        .slider::-moz-range-thumb {
            width: 20px;
            height: 20px;
            background: #ffffff;
            border-radius: 50%;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <!-- Transparent slider control -->
    <div class="slider-container">
        <input type="range" min="0" max="1" value="1" step="0.01" class="slider" id="slider">
    </div>

    <!-- Draggable window -->
    <div class="window" id="window">
        <div class="title-bar" id="titleBar">
            Notes
        </div>
        <textarea class="text-area" placeholder="Type something..."></textarea>
    </div>

    <script>
        const windowElement = document.getElementById('window');
        const titleBar = document.getElementById('titleBar');
        const slider = document.getElementById('slider');

        let isDragging = false;
        let offsetX, offsetY;

        // Make the window draggable
        titleBar.addEventListener('mousedown', (e) => {
            isDragging = true;
            offsetX = e.clientX - windowElement.getBoundingClientRect().left;
            offsetY = e.clientY - windowElement.getBoundingClientRect().top;
        });

        document.addEventListener('mousemove', (e) => {
            if (isDragging) {
                windowElement.style.left = `${e.clientX - offsetX}px`;
                windowElement.style.top = `${e.clientY - offsetY}px`;
            }
        });

        document.addEventListener('mouseup', () => {
            isDragging = false;
        });

        // Control window transparency using the slider
        slider.addEventListener('input', () => {
            windowElement.style.opacity = slider.value;
        });
    </script>
</body>
</html>
